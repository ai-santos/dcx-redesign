doctype html
html(lang='en')
	head
		meta(http-equiv='content-type', content='text/html; charset=UTF-8')
		meta(charset='utf-8')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway')
		link(type='text/css', rel='stylesheet', href='stylesheets/normalize.css', media='screen,projection')
		link(rel='stylesheet', type='text/css', href='stylesheets/style.css')

		title Dapper Clothing Exchange
		meta(name='generator', content='Bootply')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		//if lt IE 9
			script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
		script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js')
		script(src='scripts/app.js')
	body(class=bodyClass)

		div
			.parallax-background
				img(src="/images/dapperclothing.jpg")
		div
			.page-content

				header(class="fixed")
					nav(id='nav').overlay
						ul.header-ul
							li.header-links
								a(href='/')
									div
										| Home
							li.header-links
								a(href='/about')
									div
									| About
									div
										ul
											li
												a(href='#') SpringXchange
											li
												a(href='#') The Crew
											li
												a(href='#') How It Works
							li.header-links
								a(href='/gallery')
									div
									| Gallery
							li.header-links
								a(class='open-connect-modal' href='')
									div
										| Connect

				.modal.connect-modal
					.box
						a.close(class='close-connect-modal' href='') X
						p.title Connect
						.content
							form(role='form', novalidate='')
								.form-group
									label(for='inpEmail').label Name
										input#name(type='Name', placeholder='Your Name').form-control
								.form-group
									label(for='inpEmail').label Email address
										input#inpEmail(type='email', placeholder='Enter email').form-control
								.modal-footer
									button.btn.btn-default(type='button', data-dismiss='modal').btn.btn-default Close
									button.btn.btn-primary(type='button').btn.btn-primary Save 



				main
				block content
